<%include partials/header%>
<div class= "container"> 
<div class="row">

<div id="showmsg">Thank you for signing up! An email has been sent to your account please <a href="/login" class="btn  btn-primary btn-sm">login</a> to continue.</div>

<h1 class="form-title">User Registration</h1>
<div class="form-div">
<form method="post" action="/users">
<div class="form-group"> 
<input class="form-control" type="text" name="firstName" placeholder="please enter your first name">
</div>
<div class="form-group"> 
<input class="form-control" type="text" name="lastName" placeholder="please enter your last name">
</div>
<div class="form-group"> 
<input class="form-control" type="text" name="username" placeholder="please enter your username">
</div>
<div class="form-group"> 
<input class="form-control" type="text" name="email" placeholder="email">
</div>
<div class="form-group"> 
<input class="form-control" type="password" name="password" placeholder="enter password">
</div>
<div class="form-group"> 
<input class="form-control" type="text" name="phone" placeholder="please enter your phone number">
</div>
<div class="form-group"> 
<select class="form-control" name="subscription">
<option selected hidden>subscription type</option>
<option value="None">None</option>
<option value="Weekly"> Weekly </option>
<option value="Monthly"> Monthly</option>
<option value="Daily"> Daily </option>
</select>
</div>
<div class="form-group"> 
<input class="form-control" type="text" name="dob" placeholder="please enter your date of birth">
</div>
<div class="form-group"> 
<button id="submit" class="btn  btn-primary btn-block">Submit</button>
</div>

<script>
$(document).ready(function () {
	$('#showmsg').hide();
	$('#submit').click(function(){
		$('#showmsg').show();
	});
});

</script>

</form>
</div>

</div>
</div>
<%include partials/footer%>