<%include partials/header%>

<div class= "container">
<h2>All the actions</h2>
<p>
<a class="btn btn-primary btn-sm" href="/actions/new" style="text-decoration:none;">Post an Action</a>
</p>
<div class="row text-center">

<%	actions.forEach(function(action){ %>
		<div class="col-md-3 col-sm-6"> 
		<div class="thumbnail">
		<h4> <%= action.title %> </h4>
		<p>
		 <img src="<%= action.image %>" alt="">
		 </p>
		 <div class="caption">
		<p> <%= action.topic %> </p>
		<p> <%= action.pubDate.toDateString() %> </p>
		</div>
		<p>
		<a class="btn btn-primary btn-sm" href="/actions/<%= action._id %>">Read More</a>
		</p>
		</div>
		</div>
<%	}); %>

</div>
</div>

<%include partials/footer%>
