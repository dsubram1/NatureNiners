<%include partials/header%>

<div class="container">
	<div class="row">
<h1 class="form-title">Create An Action</h1>
<div class="form-div">
<form method="post" action="/actions">
<div class="form-group"> 
<input class="form-control" type="text" name="title" placeholder="please enter title">
</div>
<div class="form-group"> 
<textarea class="form-control" type="text" name="content" placeholder="please enter your content"></textarea>
</div>
<div class="form-group">
<p>Please select any of the category above:</p>
<select class="form-control" name="topic">
<option value="Climate"> Climate </option>
<option value="Land">Land </option>
<option value="Water"> Water </option>
<option value="Wildlife"> Wildlife </option>
</select>
</div>
<div class="form-group">
<input class="form-control" type="text" name="image" placeholder="image url"> 
</div>
<div class="form-group">
<input class="form-control" type="text" name="location" placeholder="please enter location"> 
</div>
<div class="form-group">
<input class="form-control" type="text" name="startTime" placeholder="please enter start time">
</div>
<div class="form-group"> 
<input class="form-control" type="text" name="endTime" placeholder="please enter end time">
</div>
<div class="form-group">
<input class="form-control" type="text" name="expLikes" placeholder="please enter the expected number of people"> 
</div>
<div class="form-group">
<button class="btn  btn-primary btn-block">Submit</button>
</div>
</form>
</div>
</div>
</div>
<%include partials/footer%>